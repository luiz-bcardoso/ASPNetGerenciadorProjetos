@model ASPNetGerenciadorProjetos.Models.Projeto

@{
    ViewData["Title"] = "Excluir Projeto";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0 text-danger">Excluir Projeto</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-warning mb-4" role="alert">
                Tem certeza que deseja excluir este projeto? Esta ação não poderá ser desfeita.
            </div>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cliente)</dt>
                <dd class="col-sm-9">@Model.Cliente</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataInicio)</dt>
                <dd class="col-sm-9">@Model.DataInicio.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataTermino)</dt>
                <dd class="col-sm-9">@((Model.DataTermino.HasValue) ? Model.DataTermino.Value.ToString("dd/MM/yyyy") : "-")</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ProjetoID" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>