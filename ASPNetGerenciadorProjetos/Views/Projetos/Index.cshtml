@model IEnumerable<ASPNetGerenciadorProjetos.Models.Projeto>

@{
    ViewData["Title"] = "Projetos";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0 text-primary">Projetos Cadastrados</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Novo Projeto
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Cliente)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DataInicio)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DataTermino)</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Nenhum projeto cadastrado.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Cliente</td>
                            <td>@item.DataInicio.ToString("dd/MM/yyyy")</td>
                            <td>@(item.DataTermino?.ToString("dd/MM/yyyy") ?? "-")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@item.ProjetoID" class="btn btn-outline-primary btn-sm me-1" title="Detalhes">
                                    <i class="bi bi-search"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ProjetoID" class="btn btn-outline-warning btn-sm me-1" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProjetoID" class="btn btn-outline-danger btn-sm" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>