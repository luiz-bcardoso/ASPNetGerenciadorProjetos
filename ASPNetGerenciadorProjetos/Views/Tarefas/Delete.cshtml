@model ASPNetGerenciadorProjetos.Models.Tarefa

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h2 class="mb-0 text-danger">Excluir Tarefa</h2>
            <a asp-action="Index" class="btn btn-outline-secondary">Voltar à Lista</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="alert alert-warning mb-4" role="alert">
                Tem certeza que deseja excluir esta tarefa? Esta ação não poderá ser desfeita.
            </div>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
                <dd class="col-sm-9">@Model.Titulo</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Projeto)</dt>
                <dd class="col-sm-9">@Model.Projeto?.Cliente</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="TarefaId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>